	private static List<String> traiterPiles(String s) 
	{
		String[] aux = s.split("\n");
		System.out.println(s);		
		char[] car = aux[0].toCharArray();
		for(int i = 1; i < car.length; i +=4)
		{
			if(car[i] == ' ') piles.add("");
			else piles.add(""+car[i]);
		}
		
		for(int i = 1; i < aux.length; i++)
		{
			System.out.println(i);
			car = aux[i].toCharArray();
			for(int j = 1; i < car.length; i +=4)
			{
				if(car[j] != ' ')
				{
					int k = j/4;
					piles.add(k, car[j] + piles.get(k));
				}
			}
		}
		for(String p : piles) System.out.println(p);
		throw new RuntimeException(""+piles.size());
		
//		{
//			char[] car = aux[i].toCharArray();
